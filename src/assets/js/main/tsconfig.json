{
  "compilerOptions":
  {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    // "lib": [],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true
  },
  // "include": [
  //     "src/**/*"
  // ],
  "exclude": [
    "node_modules"
  ]
}
