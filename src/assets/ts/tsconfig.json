{
  "compilerOptions":
  {
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    // "lib": [],
    "strict": false,

    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "experimentalDecorators": true,
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true
  },
  // "include": [
  //     "src/**/*"
  // ],
  "exclude": [
    "node_modules"
  ]
}
